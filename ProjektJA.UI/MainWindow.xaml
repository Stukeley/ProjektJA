<Window x:Class="ProjektJA.UI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ProjektJA.UI"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
		<StackPanel VerticalAlignment="Center" HorizontalAlignment="Center" Width="300">
			<TextBlock Text="x = 1, y = 2" FontSize="16" Margin="10" HorizontalAlignment="Center"/>
			
			<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
				<Button x:Name="RunCppButton" Content="C++" FontSize="16" Margin="5" Click="RunCppButton_Click"/> 
				<Button x:Name="RunAsmButton" Content="ASM" FontSize="16" Margin="5" Click="RunAsmButton_Click"/> 
			</StackPanel>

			<TextBlock x:Name="ResultBlock" Margin="10" FontSize="16" HorizontalAlignment="Center"/>
		</StackPanel>
	</Grid>
</Window>
